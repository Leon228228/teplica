<Page x:Class="TeplicaIS.water"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeplicaIS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="water">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="img_water_hum" Grid.Row="1" Grid.Column="0" Source="/water_hum.png"
               Width="200" Height="100" Mouse.MouseDown="hum_Click"></Image>
        <Image x:Name="img_water_barrel" Grid.Row="1" Grid.Column="1" Source="/water_barrel.png"
               Width="200" Height="100" Mouse.MouseDown="barrel_Click"></Image>
        <Image x:Name="img_water_can" Grid.Row="1" Grid.Column="2" Source="/water_can.png"
               Width="200" Height="100" Mouse.MouseDown="can_Click"></Image>
        <Image x:Name="img_water_valve" Grid.Row="1" Grid.Column="3" Source="/water_valve.png"
               Width="200" Height="100" Mouse.MouseDown="valve_Click"></Image>


    </Grid>
</Page>
